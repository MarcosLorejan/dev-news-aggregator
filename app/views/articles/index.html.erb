<div class="container mx-auto px-4 py-8 max-w-7xl">
  <!-- Header Section -->
  <div class="glass-effect rounded-2xl p-8 mb-8 animate-fade-in">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
      <div>
        <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-primary-400 to-primary-600 bg-clip-text text-transparent mb-2">
          Developer News Aggregator
        </h1>
        <p class="text-gray-400 text-lg">Stay updated with the latest in tech and development</p>
      </div>
      <div class="flex items-center space-x-4">
        <%= link_to bookmarks_path, class: "group flex items-center px-4 py-2 bg-gradient-to-r from-primary-600 to-primary-700 text-white rounded-xl font-medium transition-all duration-200 hover:from-primary-700 hover:to-primary-800 hover:scale-105 hover:shadow-lg hover:shadow-primary-500/25" do %>
          <svg class="w-4 h-4 mr-2 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
          </svg>
          Reading List
        <% end %>
        <%= link_to read_articles_path, class: "group flex items-center px-4 py-2 bg-gradient-to-r from-green-600 to-green-700 text-white rounded-xl font-medium transition-all duration-200 hover:from-green-700 hover:to-green-800 hover:scale-105 hover:shadow-lg hover:shadow-green-500/25" do %>
          <svg class="w-4 h-4 mr-2 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Already Read
        <% end %>
        <div class="text-sm text-gray-400">
          <div class="flex items-center space-x-2">
            <span class="w-2 h-2 bg-primary-500 rounded-full animate-pulse"></span>
            <span>Total: <span class="text-primary-400 font-semibold"><%= @total_count %></span> articles</span>
          </div>
          <% if @last_updated %>
            <div class="text-xs text-gray-500 mt-1">Updated <%= @last_updated.strftime("%b %d at %I:%M %p") %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <% if @articles.any? %>
    <!-- Category Filter Section -->
    <div class="mb-8 animate-slide-up">
      <div class="glass-effect rounded-2xl p-6">
        <h3 class="text-lg font-semibold text-gray-200 mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.707A1 1 0 013 7V4z"></path>
          </svg>
          Filter by Category
        </h3>
        <div class="flex flex-wrap gap-3">
          <button class="filter-btn active px-5 py-2.5 bg-gradient-to-r from-primary-600 to-primary-700 text-white rounded-xl font-medium transition-all duration-200 hover:from-primary-700 hover:to-primary-800 hover:scale-105 hover:shadow-lg hover:shadow-primary-500/25" 
                  data-filter-type="all" data-filter-value="all">
            <span class="flex items-center">
              <span class="w-2 h-2 bg-white rounded-full mr-2"></span>
              All Articles (<%= @articles.count %>)
            </span>
          </button>
          <% @articles_by_category.each do |category, articles| %>
            <button class="filter-btn px-5 py-2.5 bg-dark-800 border border-dark-700 text-gray-300 rounded-xl font-medium transition-all duration-200 hover:bg-dark-700 hover:border-primary-500 hover:text-white hover:scale-105 hover:shadow-lg hover:shadow-primary-500/10" 
                    data-filter-type="category" data-filter-value="<%= category.parameterize %>">
              <span class="flex items-center">
                <span class="text-lg mr-2"><%= category_icon(category) %></span>
                <%= category %> (<%= articles.count %>)
              </span>
            </button>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Articles Grid -->
    <div class="grid gap-6 animate-scale-in">
      <% @articles.each_with_index do |article, index| %>
        <% article_category = @articles_by_category.find { |category, articles| articles.include?(article) }&.first || 'Other' %>
        <article class="article-card group glass-effect rounded-2xl p-6 transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl hover:shadow-primary-500/10 animate-fade-in" 
                 data-source="<%= article.source_type %>" 
                 data-category="<%= article_category.parameterize %>" 
                 style="animation-delay: <%= index * 50 %>ms">
          
          <!-- Article Header -->
          <div class="flex justify-between items-start mb-4">
            <div class="flex-1">
              <h2 class="text-xl font-bold text-gray-100 mb-2 leading-tight group-hover:text-primary-300 transition-colors duration-200">
                <%= link_to article.url, target: "_blank", 
                    class: "hover:text-primary-400 transition-colors duration-200 flex items-start group/link", 
                    rel: "noopener noreferrer" do %>
                  <span class="flex-1"><%= article.title %></span>
                  <svg class="w-4 h-4 ml-2 mt-1 opacity-60 group-hover/link:opacity-100 transition-all duration-200 group-hover/link:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                <% end %>
              </h2>
            </div>
            <div class="ml-4">
              <span class="inline-block px-3 py-1.5 text-xs font-semibold bg-gradient-to-r from-primary-600/20 to-primary-700/20 text-primary-300 border border-primary-500/30 rounded-full">
                <%= article.source_type.humanize %>
              </span>
            </div>
          </div>
          
          <!-- Article Description -->
          <% if article.description.present? %>
            <p class="text-gray-400 mb-6 line-clamp-3 leading-relaxed"><%= truncate(article.description, length: 280) %></p>
          <% end %>
          
          <!-- Article Stats -->
          <div class="flex justify-between items-center text-sm border-t border-dark-700 pt-4">
            <div class="flex items-center space-x-6 text-gray-500">
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-1.5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <%= article.published_at.strftime("%b %d, %Y") %>
              </span>
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-1.5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"></path>
                </svg>
                <%= article.score %>
              </span>
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-1.5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
                <%= article.comment_count %>
              </span>
            </div>
            
            <!-- Action Buttons -->
            <div class="flex items-center space-x-3">
              <!-- Bookmark Button -->
              <% if article.bookmarked? %>
                <%= form_with url: unbookmark_article_path(article), method: :delete, local: true, class: "inline" do |form| %>
                  <%= form.button type: "submit", 
                      class: "group/bookmark p-2 bg-gradient-to-r from-primary-600 to-primary-700 text-white rounded-lg transition-all duration-200 hover:from-primary-700 hover:to-primary-800 hover:scale-110 hover:shadow-lg hover:shadow-primary-500/25", 
                      title: "Remove from reading list" do %>
                    <svg class="w-4 h-4 transition-transform group-hover/bookmark:scale-110" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
                    </svg>
                  <% end %>
                <% end %>
              <% else %>
                <%= form_with url: bookmark_article_path(article), method: :post, local: true, class: "inline" do |form| %>
                  <%= form.button type: "submit", 
                      class: "group/bookmark p-2 bg-dark-700 border border-dark-600 text-gray-400 rounded-lg transition-all duration-200 hover:bg-primary-600 hover:border-primary-500 hover:text-white hover:scale-110 hover:shadow-lg hover:shadow-primary-500/25", 
                      title: "Add to reading list" do %>
                    <svg class="w-4 h-4 transition-transform group-hover/bookmark:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
                    </svg>
                  <% end %>
                <% end %>
              <% end %>
              
              <!-- Already Read Button -->
              <% if article.read? %>
                <%= form_with url: unmark_article_as_read_path(article), method: :delete, local: true, class: "inline" do |form| %>
                  <%= form.button type: "submit", 
                      class: "group/read p-2 bg-gradient-to-r from-green-600 to-green-700 text-white rounded-lg transition-all duration-200 hover:from-orange-600 hover:to-orange-700 hover:scale-110 hover:shadow-lg hover:shadow-orange-500/25", 
                      title: "Mark as unread" do %>
                    <svg class="w-4 h-4 transition-transform group-hover/read:scale-110" fill="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  <% end %>
                <% end %>
              <% else %>
                <%= form_with url: mark_article_as_read_path(article), method: :post, local: true, class: "inline" do |form| %>
                  <%= form.button type: "submit", 
                      class: "group/read p-2 bg-dark-700 border border-dark-600 text-gray-400 rounded-lg transition-all duration-200 hover:bg-green-600 hover:border-green-500 hover:text-white hover:scale-110 hover:shadow-lg hover:shadow-green-500/25", 
                      title: "Mark as read" do %>
                    <svg class="w-4 h-4 transition-transform group-hover/read:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  <% end %>
                <% end %>
              <% end %>
              
              <!-- View Details Button -->
              <%= link_to article_path(article), 
                  class: "group/detail px-4 py-2 bg-gradient-to-r from-dark-700 to-dark-600 border border-dark-500 text-gray-300 rounded-lg font-medium transition-all duration-200 hover:from-primary-600 hover:to-primary-700 hover:border-primary-500 hover:text-white hover:scale-105 hover:shadow-lg hover:shadow-primary-500/20" do %>
                <span class="flex items-center">
                  Details
                  <svg class="w-4 h-4 ml-2 transition-transform group-hover/detail:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </span>
              <% end %>
            </div>
          </div>
        </article>
      <% end %>
    </div>
  <% else %>
    <!-- No Articles State -->
    <div class="glass-effect rounded-2xl p-12 text-center animate-fade-in">
      <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-r from-primary-600/20 to-primary-700/20 rounded-full flex items-center justify-center">
        <svg class="w-10 h-10 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2.5 2.5 0 00-2.5-2.5H15"></path>
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-gray-200 mb-4">No articles found</h2>
      <p class="text-gray-400 mb-8 max-w-md mx-auto leading-relaxed">
        The news aggregator hasn't fetched any articles yet. Run the following command to populate your feed with the latest tech news:
      </p>
      <div class="bg-dark-800 border border-dark-700 rounded-xl px-6 py-4 inline-block mb-6">
        <code class="text-primary-300 font-mono text-sm">bin/rails news:fetch</code>
      </div>
      <div class="text-sm text-gray-500">
        <p>This will fetch articles from Hacker News, Dev.to, and multiple Reddit communities.</p>
      </div>
    </div>
  <% end %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const filterBtns = document.querySelectorAll('.filter-btn');
  const articles = document.querySelectorAll('.article-card');
  
  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const filterType = btn.dataset.filterType;
      const filterValue = btn.dataset.filterValue;
      
      // Update active button
      filterBtns.forEach(b => {
        b.classList.remove('active', 'bg-gradient-to-r', 'from-primary-600', 'to-primary-700', 'text-white', 'shadow-lg', 'shadow-primary-500/25');
        b.classList.add('bg-dark-800', 'border', 'border-dark-700', 'text-gray-300');
      });
      btn.classList.add('active', 'bg-gradient-to-r', 'from-primary-600', 'to-primary-700', 'text-white', 'shadow-lg', 'shadow-primary-500/25');
      btn.classList.remove('bg-dark-800', 'border', 'border-dark-700', 'text-gray-300');
      
      // Filter articles
      articles.forEach(article => {
        let showArticle = false;
        
        if (filterType === 'all' && filterValue === 'all') {
          showArticle = true;
        } else if (filterType === 'category') {
          showArticle = article.dataset.category === filterValue;
        }
        
        article.style.display = showArticle ? 'block' : 'none';
      });
    });
  });
});
</script>
